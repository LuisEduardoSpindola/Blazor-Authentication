﻿<AuthorizeView>
    <Authorized>
        <a href="Identity/Account/Manage">Olá, @context.User.Identity?.Name!</a>
        <form method="post" action="Identity/Account/Logout">
            <button type="submit" class="btn btn-outline-warning">Sair</button>
        </form>
    </Authorized>
    <NotAuthorized>
        <a href="Identity/Account/Register" class="btn btn-primary">Cadastrar</a>
        <a href="Identity/Account/Login" class="btn btn-primary">Logar</a>
    </NotAuthorized>
</AuthorizeView>